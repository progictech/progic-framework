{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "removeComments": true,
    "target": "ES2020",
    "strict": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "incremental": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictFunctionTypes": false,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": true,
  "lib": ["es2015"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
